<div class="card container">

    <h3 class="card-header">Create New Post</h3>

    <form class="card-body new-post-form " id="new-post-form">
        <div class="mb-3">
            <label for="post-title" class="form-label">Title</label>
            <input type="text" id="post-title" name="post-title" class="form-input form-control" />
        </div>


        <div class="mb-3">
            <label class="form-label" for="content">Content</label>
            <input id="content" name="content" class="form-input form-control" />
        </div>
        <button type="submit" class="btn-primary form-control">Post</button>
    </form>

</div>

<script src="/js/add-post.js"></script>