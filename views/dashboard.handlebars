{{#if posts.length}}

<section class="container">

  <h2>Your Posts</h2>

    {{#each posts as |post|}}
      {{> dashboard-postinfo post}}
    {{/each}}

</section>

{{/if}}

<div class="d-flex justify-content-center">
  <button type="submit" class="btn p-4 "><a class="link" href="/dashboard/new">+ New Post</a></button>
</div>


<script src="/js/add-post.js"></script>