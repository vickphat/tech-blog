<div class="card container p-3">
    <h3 class="card-header">Edit Post</h3>

    <form class="card-body edit-post-form">
        <div class="mb-3">
            <label for="post-title" class="form-label">Title</label>
            <input name="post-title" type="text" value="{{post.title}}" class="form-input form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="content">Content</label>
            <input name="content" type="text" value="{{post.content}}" class="form-input form-control" />
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn-primary mx-3">Update Post</button>
            <button type="button" class="delete-post-btn btn-danger mx-3">Delete Post</button>
        </div>


    </form>

</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>